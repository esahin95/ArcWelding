FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     interThermoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.01;

deltaT          1e-5;

writeControl    adjustableRunTime;

writeInterval   0.001;

purgeWrite      0;

writeFormat     binary;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable no;

adjustTimeStep  yes;

maxCo           0.02;
maxAlphaCo      0.02;
maxDi           5000000.0;

maxDeltaT       5e-5;


// ************************************************************************* //

functions
{
    residuals
    {
        type            residuals;

        libs            ("libutilityFunctionObjects.so");

        writeControl    timeStep;
        writeInterval   1;

        fields          (p_rgh);
    }

    maxValue
    {
        type            volFieldValue;

        libs            ("libfieldFunctionObjects.so");

        log             true;

        writeControl    writeTime;

        writeFields     false;

        regionType      all;

        operation       maxMag;

        fields (p_rgh U T);
    }
  
    lineUniform
    {
        type            sets;

        libs            ("libsampling.so");

        writeControl    writeTime;

        interpolationScheme cellPoint;

        setFormat       raw;

        fields          (alpha.water);

        sets
        (
            left
            {
                type            lineUniform;
                axis            distance;
                start           (1e-7 0.0 5e-5);
                end             (1e-7 5e-4 5e-5);
                nPoints         120;
            }

            right
            {
                type            lineUniform;
                axis            distance;
                start           (0.9999e-3 0.0 5e-5);
                end             (0.9999e-3 5e-4 5e-5);
                nPoints         120;
            }
        );
    }
}