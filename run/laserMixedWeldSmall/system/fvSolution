solvers
{
    "alpha.*"
    {
        nAlphaCorr      1;
        nAlphaSubCycles 2;
        cAlpha          1;

        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-10;
        relTol          0;
        minIter         1;
    }

    p_rgh
    {
        solver          GAMG;
        smoother        symGaussSeidel;
        tolerance       1e-12;
        relTol          0.05;
        nPreSweeps      2;
        nPostSweeps     3;
    }

    p_rghFinal
    {
        $p_rgh;
        relTol          0;
    }
    
    "pcorr.*"
    {
        $p_rghFinal;
        tolerance       1e-12;
    }
    
    
    T
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-10;
        relTol          0.05;
    }
    

    /*
